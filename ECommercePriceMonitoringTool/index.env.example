# Amazon Price Monitoring Tool - Environment Variables
# Copy this file to index.env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
DB_NAME=price_monitor
DB_USER=monitor_user
DB_PASS=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# ================================
# EMAIL CONFIGURATION
# ================================
# Gmail SMTP Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email Settings
FROM_NAME=Price Monitor Alert
REPLY_TO=noreply@pricemonitor.com

# ================================
# SELENIUM CONFIGURATION
# ================================
# Chrome Driver Settings
CHROME_DRIVER_PATH=auto
HEADLESS_MODE=true
BROWSER_TIMEOUT=30
WINDOW_SIZE=1920,1080

# Anti-Detection Settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
ENABLE_STEALTH=true
RANDOM_DELAY=true

# ================================
# SCRAPING CONFIGURATION
# ================================
# Rate Limiting
MIN_DELAY_SECONDS=3
MAX_DELAY_SECONDS=5
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Results Configuration
MAX_PRODUCTS_PER_SEARCH=5
ENABLE_IMAGES=true
SCRAPE_REVIEWS=true

# ================================
# SCHEDULING CONFIGURATION
# ================================
# Background Job Settings
ENABLE_SCHEDULER=true
PRICE_CHECK_INTERVAL_HOURS=6
CLEANUP_INTERVAL_HOURS=24

# Timezone
TIMEZONE=UTC

# ================================
# FLASK CONFIGURATION
# ================================
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your_secret_key_for_flask_sessions
HOST=0.0.0.0
PORT=5000

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# ================================
# SECURITY CONFIGURATION
# ================================
# Rate Limiting for Web Routes
RATE_LIMIT_PER_MINUTE=60
ENABLE_CORS=true
CORS_ORIGINS=*

# ================================
# NOTIFICATION SETTINGS
# ================================
# Email Alert Configuration
EMAIL_COOLDOWN_HOURS=24
MAX_EMAILS_PER_DAY=50
ENABLE_EMAIL_ALERTS=true

# Alert Templates
PRICE_DROP_SUBJECT=ðŸ”” Price Drop Alert: {product_name}
BACK_IN_STOCK_SUBJECT=ðŸ“¦ Back in Stock: {product_name}

# ================================
# DATA RETENTION
# ================================
# Cleanup Settings
KEEP_PRICE_HISTORY_DAYS=90
KEEP_EMAIL_LOGS_DAYS=30
CLEANUP_OLD_SESSIONS_DAYS=7

# ================================
# PERFORMANCE SETTINGS
# ================================
# Database Connection Pool
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Caching
ENABLE_CACHING=true
CACHE_TIMEOUT_SECONDS=300